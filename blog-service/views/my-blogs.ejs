<!DOCTYPE html>
<html>
<head>
  <title>My Blogs</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
    <nav>
        <a href="/new">Write Blog</a>
        <a href="/blogs/my-blogs">My Blogs</a>
        <a href="/auth/logout">Logout</a>
    </nav>
  <h1>My Blog Posts</h1>

  <% if (blogs.length > 0) { %>
    <% blogs.forEach(blog => { %>
      <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 15px;">
        <h3><%= blog.title %></h3>
        <p><%= blog.content %></p>
        <small><strong>Country:</strong> <%= blog.country %></small><br>
        <small><strong>Date:</strong> <%= blog.created_at %></small>
      </div>
    <% }) %>
  <% } else { %>
    <p>You haven’t written any blogs yet.</p>
  <% } %>

  <br>
  <a href="/">← Back to All Blogs</a>
</body>
</html>
